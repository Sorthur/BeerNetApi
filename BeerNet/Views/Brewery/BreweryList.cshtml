@model IList<Brewery>
@using BeerNet.Models.Enums
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="BrewerySearch">
    <div class="row">
        <div class="col-3">
            <div class="form-row form-group">
                <label for="breweryName">Brewery Name</label>
                <input id="breweryName" name="breweryName" type="text" class="form-control" />
            </div>
        </div>

        <div class="col-3">
            <div class="form-row form-group">
                <label for="country">Country</label>
                <select id="country" name="country" class="form-control">
                    <option value="" disabled selected hidden>Choose Country...</option>
                    @foreach (var country in (Country[])Enum.GetValues(typeof(Country)))
                    {
                        <option>@country</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-primary" style="position: absolute; bottom: 1em;" />
        </div>
    </div>
</form>



@foreach (var brewery in Model)
{
    <div class="list-group">
        <a asp-action="BreweryDetails" asp-route-id="@brewery.Id" class="list-group-item list-group-item-action">
            <div class="row">
                <div class="col-1 text-center">
                    <img src="@brewery.GetImage()" style="max-height: 5em; max-width: 5em" />
                </div>
                <div class="col-11 small pl-4">
                    <div class="row">
                        <h5>@brewery.Name</h5>
                    </div>
                    <div class="row">
                        @brewery.Country
                    </div>
                    <div class="row">
                        Beer brewed: @brewery.Beers.Count()
                    </div>
                </div>
            </div>
        </a>
    </div>
}