<ul class="pagination">
    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
        <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@(ViewBag.currentPage - 1)" class="page-link" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @if (ViewBag.NumberOfPages == 1)
    {
        <li class="page-item active">
            <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="1" class="page-link">
                1
            </a>
        </li>
    }
    else
    {


        @if (ViewBag.CurrentPage >= 5)
        {
            <li class="page-item">
                <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="1" class="page-link">
                    1
                </a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    &hellip;
                </a>
            </li>
            <li class="page-item">
                <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@(ViewBag.CurrentPage - 1)" class="page-link">
                    @(ViewBag.CurrentPage - 1)
                </a>
            </li>
        }
        else
        {
            for (int i = 1; i <= ViewBag.CurrentPage - 1; i++)
            {
                <li class="page-item">
                    <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@i" class="page-link">
                        @i
                    </a>
                </li>
            }
        }

        <li class="page-item active">
            <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@ViewBag.CurrentPage" class="page-link">
                @ViewBag.CurrentPage
            </a>
        </li>

        @if (ViewBag.NumberOfPages > (ViewBag.CurrentPage + 3))
        {
            <li class="page-item">
                <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@(ViewBag.CurrentPage + 1)" class="page-link">
                    @(ViewBag.CurrentPage + 1)
                </a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    &hellip;
                </a>
            </li>
            <li class="page-item">
                <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@ViewBag.NumberOfPages" class="page-link">
                    @ViewBag.NumberOfPages
                </a>
            </li>
        }
        else
        {
            for (int i = ViewBag.CurrentPage + 1; i <= ViewBag.NumberOfPages; i++)
            {
                <li class="page-item">
                    <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@i" class="page-link">
                        @i
                    </a>
                </li>
            }
        }
    }

    <li class="page-item @(ViewBag.CurrentPage == ViewBag.NumberOfPages ? "disabled" : "")">
        <a asp-action="Search" asp-all-route-data="ViewBag.Parms" asp-route-currentPage="@(ViewBag.CurrentPage + 1)" class="page-link" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>